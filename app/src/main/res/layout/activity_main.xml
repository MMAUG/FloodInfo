<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:columnCount="3"
  android:rowCount="2">

  <org.mmaug.yaybay.ZgTextView
    android:id="@+id/tv_latest_news"
    style="@style/Button"
    android:layout_column="0"
    android:layout_row="0"
    android:background="@color/green"
    android:text="@string/str_latest_news" />

  <org.mmaug.yaybay.ZgTextView
    android:id="@+id/tv_alert_level"
    style="@style/Button"
    android:layout_column="1"
    android:layout_row="0"
    android:background="@color/red"
    android:text="@string/str_alert_level" />

  <org.mmaug.yaybay.ZgTextView
    android:id="@+id/tv_report"
    style="@style/Button"
    android:layout_column="0"
    android:layout_row="1"
    android:background="@color/blue"
    android:text="@string/str_report" />

  <org.mmaug.yaybay.ZgTextView
    android:id="@+id/tv_donation_team"
    style="@style/Button"
    android:layout_column="1"
    android:layout_row="1"
    android:background="@color/purple"
    android:text="@string/str_donation" />

</GridLayout>

