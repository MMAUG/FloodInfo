<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="mmaug.org.yaybay"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name="org.mmaug.InfoCenter.activities.MainActivity"
      android:label="@string/title_activity_main">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="org.mmaug.InfoCenter.activities.ContactsActivity" />

    <activity android:name="org.mmaug.InfoCenter.activities.ContactDetailActivity" />

    <activity android:name="org.mmaug.InfoCenter.activities.NewsActivity" />

    <activity android:name="org.mmaug.InfoCenter.activities.NewsDetailActivity" />

    <activity android:name="org.mmaug.InfoCenter.activities.ReportActivity" />
  </application>

</manifest>
